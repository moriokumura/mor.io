<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    
    <%= form_for @attribute_item, url: @url, html: { class: 'form form-horizontal form-attribute-item' } do |f| %>
      <div class="form-submits col-sm-12 clearfix">
        <%= link_to 'Cancel', :back, class: 'btn btn-link cancel' %>
        <div class="pull-right">
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </div>
      <%= render partial: 'shared/error_messages', locals: { object: @attribute_item } %>
